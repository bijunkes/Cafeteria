datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  role String @default("user")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String?
  imageUrl String?
  options ProductOption[]
}

model ProductOption {
  id Int @id @default(autoincrement())
  size String
  price Float
  quantite Int
  productId Int

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

